%h1
  %center
    Items Being Edited
.posts-wrapper.row
  .post
    .post-head
      .name
        Username here
    .image.center-block
      =image_tag @post.avatar.url(:medium)
    %p.caption
      =@post.caption
%h1
  %center
    Edit Post

= render 'form'

.text-center.edit-links
  = link_to "Delete Post", post_path(@post), method: :delete, data: { confirm: "Are you sure you want to delete this post?" }
  |
  = link_to "Home", posts_path